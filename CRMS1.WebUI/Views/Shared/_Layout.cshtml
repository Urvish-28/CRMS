<body>

    <div class="header">
        <div class="container">
            <div class="align-center align-between">
                <div class="align-center">
                    <div class="logoDiv"> <a href="#"> <img src="~/Content/image/logo.svg" alt="CRB Logo"> </a> </div>

                    <div class="menuDiv">
                        <ul class="align-center">
@*                            <li> <a href="#"> Home </a> </li>*@
@*                            <li> <a href="@Url.Action("Index" , "Room")"> Conference </a> </li>
                            <li> <a href="@Url.Action("DashBoard","Account")"> Systems  </a> </li>*@
                            <li> <a href="@Url.Action("Index","FormMst")"> Forms </a></li>
                            @foreach (var item in (IEnumerable<CRMS1.Core.Models.FormMst>)Session["FormTabs"])
                            {
                                if (item.ParentFormId == null)
                                {
                                    <li> <a href="/@item.NavigateURL"> @item.Name </a> </li>
                                }
                             }
                        </ul>
                    </div>
                </div>

                <div class="userInfo">
                    <div class="align-center">
                        <div class="userProfile">

                        </div>
                        <div class="userName align-center">
                            <span>Hello @Session["Name"] </span>
                            <i> <img src="~/Content/image/down-arrow.svg" alt="Dropdown Icon"> </i>
                            <div class="userInfoDiv">
                                <div class="userInfoBox">
                                    <a href="#">Profile</a>
                                    @*<a href="#">Settings</a>*@
                                    <a href="@Url.Action("ChangePassword","User")">Change Password</a>
                                    <a href="@Url.Action("Logout" , "Account")">logout</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

