@model CRMS1.Core.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en-us">
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CRB Login</title>
    <link rel="stylesheet" href="~/Content/css/login.css">

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src='@Url.Content("~/Scripts/jquery.validate.js")' type='text/javascript'></script>
    <script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type='text/javascript'></script>


</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="loginDiv">
            <div class="loginBox">
                <div class="loginLogo">
                    <img src="~/Content/image/logo.svg" alt="CRB Logo">
                </div>

                <div class="formSection">
                    <div class="inputBox">
                        <label>Username</label>
                        @* <input type="text" placeholder="Email" />*@
                        @Html.TextBoxFor(model => model.Email, new { placeholder = "Email", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "errorMsg" })
                    </div>
                    <div class="inputBox">
                        <label>Password</label>
                        @*<input type="password" placeholder="Password" />*@
                        @Html.PasswordFor(model => model.Password, new { placeholder = "Password", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "errorMsg" })
                    </div>
                    <div class="inputBox">
                        @Html.ValidationSummary(true, "", new { @class = "errorMsg" })
                    </div>
                    <!-- <div class="inputBox forgotPsw">
                        <a href="#">Forgot Password</a>
                    </div> -->
                    <div class="inputBox btnInput">
                        @*   <a href="index.html" class="loginBtn">Login</a>*@
                        <button class="loginBtn" type="submit">Login</button>
                    </div>
                </div>

            </div>
        </div>
    }
</body>
</html>
