@model IEnumerable<CRMS1.Core.ViewModels.IndexViewModel>

@{
    ViewBag.Title = "Index";
}
<script src="https://code.jquery.com/jquery-3.6.4.js" integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E=" crossorigin="anonymous"></script>
<script>
    function myFunction(data) {

             var id = $(data).attr('id')
        if (confirm("Are You Sure You Want To Delete?") == true) {
            $.ajax({
                url: '@Url.Action("Delete","User")',
                data: { 'id': id},
                type: "post",
                success: function (savingStatus) {
                    location.reload();
                },
                error: function (xhr, ajaxOptions, thrownError) {

                }
            });

        } else {

        }
    }

    $(document).ready(function () {
        $('#success').fadeOut(3000);
    })
</script>

<br />
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", "User", new { @class = "btn btn-primary" })
</p>
@if (@TempData["AlertMsg"] != null)
{
    <div id="success" class="alert alert-success">
        <strong>Success !</strong> @TempData["AlertMsg"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MobileNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        @*        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.UserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MobileNo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Gender)
    </td>
    @*        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>*@
    <td>
        @Html.DisplayFor(modelItem => item.Role)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", "User", new { id = item.Id }, new { @class = "btn btn-warning" }) |
        @*       @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
        <button id="@item.Id" class="btn btn-danger" onClick="myFunction(this)">Delete</button>
    </td>
</tr>
    }
</table>
