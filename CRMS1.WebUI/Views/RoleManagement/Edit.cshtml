@model CRMS1.Core.ViewModels.RoleViewModel

@{
    ViewBag.Title = "Edit";
}
<script>
    $(document).ready(function () {
        $('#already').fadeOut(3000);
    })
</script>

@if (@TempData["AlertMsg"] != null)
{
    <div id="already" class="alert alert-danger">
        <strong>Wrong !</strong> @TempData["AlertMsg"]
    </div>
}

<div class="section">
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            <div class="formDiv">
                <div class="topTitleHead pb20">
                    <h1>Edit Conference Room</h1>
                </div>
                <div class="formSection">
                    <div class="inputBox">
                        <label>Name</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { placeholder = "Name", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="inputBox">
                        <label>Code</label>
                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { placeholder = "Code", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                    </div>
                    <div class="inputBox">
                        <button class="btnDiv" type="submit">Save</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "DashBoard", "Account", new { selectedTabId = 1 }, null)
</div>
