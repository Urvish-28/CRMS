@model CRMS1.Core.ViewModels.RoleViewModel

@{
    ViewBag.Title = "Create";
}

<script>
    $(document).ready(function () {
        $('#already').fadeOut(3000);
    })
</script>

@if (@TempData["RoleAlert"] != null)
{
    <div id="already" class="alert alert-danger">
        <strong>Wrong !</strong> @TempData["RoleAlert"]
    </div>
}


<div class="section">
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="formDiv">
                <div class="topTitleHead pb20">
                    <h1>Add New Role</h1>
                </div>
                <div class="formSection">
                    <div class="inputBox">
                        <label>Name</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { placeholder = "Name", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="inputBox">
                        <label>Code</label>
                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { placeholder = "Code", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                    </div>
                    <div class="inputBox">
                        <button class="btnDiv" type="submit">Create</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div>
    <a href="javascript: history.go(-1)" class="btn btn-warning">Cancel</a>
</div>
